<% layout('layouts/boilerplate.ejs') %>
<div class="col-md-6 offset-3 border p-5 rounded shadow">
    <h2 class="text-muted text-center mb-3">Register</h2>
    <form action="/register" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control mb-2" name="username" id="un" placeholder="" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control mb-2" name="email" id="email" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
            <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control mb-2" name="password" id="pass" placeholder="" required>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <a href="/campgrounds">Back to home</a>
            <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </div>
    </form>
</div>

