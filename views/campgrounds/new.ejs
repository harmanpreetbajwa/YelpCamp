<form action="/campgrounds" method="post">
    <div>
        <label for="title">Title</label>
        <input type="text" name="campground[title]" id="title" placeholder="cool campground">
    </div>
    <div>
        <label for="location">Location</label>
        <input type="text" name="campground[location]" id="location" placeholder="cool location">
    </div>
    <button type="submit">Submit</button>
</form>
<a href="/campgrounds">All Campgrounds</a>
