<% layout('layouts/boilerplate.ejs') %>
<div class="row">
    <div class="col-6 mb-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body d-flex align-items-center" style="gap: 10px; margin-top: 20px;">
                <a class="card-link btn btn-warning" href="/campgrounds">Back to all Campgrounds</a>
                <a class="card-link btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a><br>
            </div>
        </div>
    </div>
    <div class="col-6 mb-3">
        <h2>Leave a review</h2>
        <form action="/campgrounds/<%= campground._id %>/review" method="post" class="needs-validation mb-3" novalidate>
            <div class="form-group mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" max="5" min="1" class="form-control mb-2 form-range" name="review[rating]" id="rate">   
            </div>
            <div class="form-group">
                <label for="body" class="form-label">Comment</label>
                <textarea class="form-control" type="text" name="review[body]" id="comment" required></textarea>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-flex">
                <button type="submit" class="btn btn-success mt-3">Submit</button>
            </div>
        </form>
        <%for (review of campground.reviews){ %>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Rating: <%= review.rating %></h5>
                    <p class="card-text">Review: <i><%= review.body ? review.body : "No Comment."%></i></p>
                </div>
            </div>
        <%}%>
    </div>
</div>
